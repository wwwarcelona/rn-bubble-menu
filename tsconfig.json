{
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "module": "ESNext",
      "target": "ES5",
      "jsx": "react",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "lib": ["ES2015", "DOM"],
      "types": ["react-native", "node"]
    },
    "include": ["src/**/*"]
  }
